---
import HamburgerMenu from "./HamburgerMenu";

interface Props {
  currentPage: "home" | "about";
}
const { currentPage } = Astro.props;
---

<header
  class="sticky top-4 z-50 w-full max-w-5xl mx-auto px-6 py-3 mb-12 rounded-full border border-white/10 bg-white/5 backdrop-blur-xl shadow-lg flex items-center justify-between transition-all hover:bg-white/10 hover:border-white/20 hover:shadow-xl"
>
  <div class="flex items-center gap-4">
    <a
      href="/"
      class="text-2xl sm:text-3xl font-bold tracking-tight hover:opacity-80 transition-opacity"
    >
      <span class="animated-gradient-logo shimmer-text">Ai-news</span>
    </a>
  </div>

  <nav
    class="hidden sm:flex items-center gap-1 bg-black/20 rounded-full p-1 border border-white/5"
  >
    <a
      href="/"
      class={`px-4 py-1.5 rounded-full text-sm font-medium transition-all ${currentPage === "home" ? "bg-white/15 text-white shadow-sm ring-1 ring-white/10" : "text-white/60 hover:text-white hover:bg-white/5"}`}
      aria-current={currentPage === "home" ? "page" : undefined}
    >
      Home
    </a>
    <a
      href="/about"
      class={`px-4 py-1.5 rounded-full text-sm font-medium transition-all ${currentPage === "about" ? "bg-white/15 text-white shadow-sm ring-1 ring-white/10" : "text-white/60 hover:text-white hover:bg-white/5"}`}
      aria-current={currentPage === "about" ? "page" : undefined}
    >
      About
    </a>
  </nav>

  <div class="w-full sm:w-auto sm:hidden flex justify-end">
    <HamburgerMenu client:media="(max-width: 639px)" />
  </div>
</header>
