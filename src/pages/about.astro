---
import Header from '../components/Header.astro';
import Footer from "../components/Footer.astro";
import FaqDropdown from '../components/FaqDropdown';
import NeuralGrid from '../components/NeuralGrid';

const siteUrl = "https://ai-news.helloworldfirm.com";
const canonicalUrl = `${siteUrl}/about`;
const title = "About AI News Hub | Methodology & Mission";
const description = "Learn how AI News Hub curates hourly updates from leading AI labs, companies, and research organizations to keep you informed on every major development.";
const keywords = "About AI News Hub, AI news aggregator, AI curation methodology, Hello.World Consulting";
const socialImage = "https://img.helloworldfirm.com/logos/512x512-logo.avif";
const socialImageAlt = "AI News Hub galaxy-inspired logo";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  name: title,
  url: canonicalUrl,
  description,
  publisher: {
    "@type": "Organization",
    name: "Hello.World Consulting",
    url: "https://helloworldfirm.com",
    logo: {
      "@type": "ImageObject",
      url: socialImage
    }
  },
  mainEntityOfPage: canonicalUrl,
  breadcrumb: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: siteUrl
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "About",
        item: canonicalUrl
      }
    ]
  }
};
---
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="author" content="Hello.World Consulting" />
    <meta name="application-name" content="AI News Hub" />
    <meta name="apple-mobile-web-app-title" content="AI News Hub" />
    <meta name="theme-color" content="#191724" />
    <meta name="color-scheme" content="dark light" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:alt" content={socialImageAlt} />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="AI News Hub" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />
    <meta name="twitter:image:alt" content={socialImageAlt} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <link rel="apple-touch-icon" href="/favicon.webp" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="dns-prefetch" href="https://img.helloworldfirm.com" />
    <link rel="preconnect" href="https://fonts.helloworldfirm.com" />
    <link rel="preconnect" href="https://fonts.helloworldfirm.com" crossorigin />
    <link rel="stylesheet" href="/global-font.css" />
    <link rel="stylesheet" href="/global-animated-gradient.css" />
    <link rel="preload" href="https://fonts.helloworldfirm.com/NebulaSans-Book.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="https://fonts.helloworldfirm.com/NebulaSans-BoldItalic.woff2" as="font" type="font/woff2" crossorigin />
    <script type="application/ld+json">{JSON.stringify(structuredData)}</script>
  </head>
  <body class="bg-bg-0 text-text-1 font-sans min-h-screen flex flex-col">
    <NeuralGrid client:idle />
    <Header currentPage="about" />
    <main class="flex-1 flex flex-col items-center justify-center px-4 relative z-10">
      <section class="max-w-2xl w-full">
        <h1 class="text-3xl sm:text-4xl font-bold mb-4">About</h1>
        <p class="text-base sm:text-lg text-text-2 mb-6"><span class="animated-gradient-logo">Ai-news</span> curates & aggregates news from the worldâ€™s leading AI organizations in one place. You can filter by company to explore the latest developments in artificial intelligence.</p>
        <p class="text-base sm:text-lg text-text-2 mb-6">Updates & news from Meta AI, OpenAI, Anthropic, Google DeepMind, Mistral AI, Hugging Face, and XAI.</p>
        <a href="/" class="glassmorphic-article-card inline-block mt-4 px-8 py-2 rounded-full font-semibold text-brand border-2 border-brand/40 shadow-lg backdrop-blur-md bg-white/10 hover:shadow-[0_0_16px_3px_rgba(196,167,231,0.28),0_0_20px_6px_rgba(246,193,119,0.2)] hover:bg-white/20 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-brand/60">
          Back to Home
        </a>
      </section>
      <FaqDropdown client:idle />
    </main>
    <Footer />
  </body>
</html>
