---
import ArticlesIslandWrapper from "../components/ArticlesIslandWrapper";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AI News</title>
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="/global-font.css">
    <link rel="stylesheet" href="/global-animated-gradient.css">
    <link rel="preload" href="https://fonts.helloworldfirm.com/NebulaSans-Book.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="https://fonts.helloworldfirm.com/NebulaSans-BoldItalic.woff2" as="font" type="font/woff2" crossorigin>
    <meta name="description" content="Ai-news curates & aggregates the latest news from top AI organizations including Meta AI, OpenAI, Anthropic, Google DeepMind, Mistral AI, Hugging Face, and XAI. Filter by company and stay up-to-date on artificial intelligence developments." />
    <meta property="og:title" content="Ai-news: Latest AI News Aggregator" />
    <meta property="og:description" content="Curated news from the worldâ€™s leading AI labs and companies. Fast, beautiful, always up-to-date." />
    <meta property="og:image" content="https://img.helloworldfirm.com/logos/512x512-logo.avif" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ai-news.helloworldfirm.com/" />
    <link rel="canonical" href="https://ai-news.helloworldfirm.com/" />
  </head>
  <body class="bg-bg-0 text-text-1 font-sans">
    <Header currentPage="home" />
    <main class="container max-w-lg sm:max-w-2xl md:max-w-3xl mx-auto px-2 sm:px-6 md:px-8 py-2">
      <section id="home" class="min-h-[20vh] mb-4">
        <h2 class="text-xl sm:text-2xl font-semibold mb-1">Welcome to <span class="animated-gradient-logo">Ai-news</span></h2>
        <p class="text-base sm:text-lg text-white/80">A collection of the latest & most important news from top AI firms, companies, & research labs.</p>
      </section>
      <section id="articles" class="mt-4 space-y-8">
        <ArticlesIslandWrapper client:visible />
      </section>
    </main>
    <Footer />
  </body>
</html>
