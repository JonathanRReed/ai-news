{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "types": ["astro/client", "astro/astro-jsx"],
    "plugins": [{ "name": "@astrojs/ts-plugin" }],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src", "src/env.d.ts"],
  "exclude": ["node_modules"]
}
